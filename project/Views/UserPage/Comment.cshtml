            @Html.EditorFor(model => model.comments.userid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.comments.userid, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group"style="display:none">
        @Html.LabelFor(model => model.frind, htmlAttributes: new { @class = "control-label col-md-2" })
