@model project.ViewModels.SearchModelView

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Back To profile", "Index", Model.user)
</p>
<form method="get" asp.action="Search">
    <p>
        <input type="search" placeholder="Enter Name OR Email...." value="@ViewData["userserach"]" name="UserSearch" style="width:500px;" />
        <input type="submit" value="search" class=" btn btn-primary" />
    </p>

</form>
<div>

    @foreach (var item in Model.SerachUsers)
    {

        <div>
            <img class="circular_image3" src="@Html.DisplayFor(modelItem => item.Image) " width="80" height="120" />

            <h4>
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </h4>
        </div>
        <div>
            @Html.ActionLink("Add Friend", "AddFriend", new { id = item.ID ,id2=Model.user.ID},
                new { @class = "btn btn-primary", @style = "color:white" })
        </div>
        <hr />

    }

</div>

