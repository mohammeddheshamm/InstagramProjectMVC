<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .comment{
            color:crimson;
            font-style:oblique;
            background:content-box;
            font-size:large;
        }
        .circular_image {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            overflow: hidden;
            background-color: blue;
            display: inline-block;
            vertical-align: middle;
        }
        .circular_image2 {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            overflow: hidden;
            background-color: blue;
            display: inline-block;
            vertical-align: middle;
        }
        .circular_image3 {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            overflow: hidden;
            background-color: blue;
            display: inline-block;
            vertical-align: middle;
        }
            .circular_image img {
                width: 100%;
            }
        body {
            background-image: url("/Images/img2.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        h1 {
            color: indigo;
            font: italic,bold;
            position: center;
        }

        footer {
            /*display: none;*/
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Instagram", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Registration", "index", "Register", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("LogIn", "index", "Login", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("LogOut", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Group FCAIH</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>